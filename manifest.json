{
  "manifest_version": 3,
  "name": "Carbon Footprint Calculator",
  "version": "1.0",
  "description": "Calculates the carbon footprint of the site visited by the user",

  "permissions": [
    "webRequest"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}



